# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=.vercel.app,yourdomain.com

# Database Configuration (Use PostgreSQL for Vercel production)
DB_NAME=bike_shop
DB_USER=bike_user
DB_PASSWORD=bike_pass
DB_HOST=localhost
DB_PORT=5432
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your@email
EMAIL_HOST_PASSWORD=your_email_app_password
DEFAULT_FROM_EMAIL=BikeShop <noreply@bikeshop.com>

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# Password Reset Token Expiry (in seconds)
PASSWORD_RESET_TIMEOUT=3600

# CORS Settings
CORS_ORIGIN_ALLOW_ALL=True

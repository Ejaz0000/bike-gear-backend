{
  "version": 2,
  "builds": [
    {
      "src": "bike_shop/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "bike_shop/wsgi.py"
    }
  ],
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput --clear"
}
